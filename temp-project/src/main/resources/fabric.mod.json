{
  "schemaVersion": 1,
  "id": "iseeyou",
  "version": "${version}",
  "name": "ISeeYou",
  "description": "录制玩家的一举一动，利用ReplayMod API以.mcpr格式保存录像",
  "authors": [
    "MC-XiaoHei",
    "CerealAxis"
  ],
  "contact": {
    "homepage": "https://github.com/MC-XiaoHei/ISeeYou",
    "sources": "https://github.com/MC-XiaoHei/ISeeYou",
    "issues": "https://github.com/MC-XiaoHei/ISeeYou/issues"
  },
  "license": "MIT",
  "icon": "assets/iseeyou/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "cn.xor7.iseeyou.ISeeYouClient"
      }
    ]
  },
  "mixins": [
    "iseeyou.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.0",
    "fabric-api": ">=0.76.0",
    "minecraft": "~1.20.4",
    "fabric-language-kotlin": ">=1.10.0",
    "replaymod": "*"
  }
} 